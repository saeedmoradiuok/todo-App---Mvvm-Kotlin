<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.EditFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                style="@style/boldText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_500"
                android:gravity="center"
                android:paddingVertical="@dimen/size_20dp"
                android:text="ویرایش کار"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18sp" />

            <EditText
                android:id="@+id/etTitle"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_120dp"
                android:layout_marginHorizontal="@dimen/size_16dp"
                android:layout_marginTop="@dimen/size_24dp"
                android:gravity="top"
                android:maxLines="3"
                android:padding="@dimen/size_16dp" />

            <TextView
                style="@style/boldText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_16dp"
                android:layout_marginTop="@dimen/size_24dp"
                android:text="@string/pick_time"
                android:textSize="@dimen/size_16sp" />

            <TimePicker
                android:id="@+id/tpTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/tvSaveTask"
        style="@style/boldText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grayTint"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:text="کار ذخیره شود"
        android:textColor="@color/green"
        android:textSize="@dimen/size_18sp" />

</RelativeLayout>